{
  "manifest_version": 2,
  "name": "My Online Identity",
  "version": "0.1",

  "description": "My Online Identity Chrome Extension",
  "icons": {
    "16": "icon/get_started16.png",
    "32": "icon/get_started32.png",
    "48": "icon/get_started48.png",
    "128": "icon/get_started128.png"
  },

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/get_started16.png",
      "32": "icon/get_started32.png",
      "48": "icon/get_started48.png",
      "128": "icon/get_started128.png"
    }
  },

  "background": {
    "persistent": true,
    "scripts": ["js/background.js", "js/backgroundStorage.js", "js/backgroundCookies.js", "js/backgroundWebRequest.js"]
  },
  "incognito": "split",
  "offline_enabled": true,
  "options_page": "options.html",
  "permissions": ["activeTab", "declarativeContent", "storage", "cookies", "webRequest", "<all_urls>"]
}
